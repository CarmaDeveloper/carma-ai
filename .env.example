# Application Name
APP_NAME=Carma AI

# PostgreSQL settings
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=carma_ai
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/carma_ai

# Vector Store settings
VECTOR_STORE_PROVIDER=pg-vector

# Embedding settings
EMBEDDING_PROVIDER=bedrock

# Model settings
MODEL_MAX_TOKENS=10000
MODEL_TEMPERATURE=1.0

# AWS Bedrock settings
BEDROCK_REGION=ca-central-1
BEDROCK_EMBEDDING=amazon.titan-embed-text-v2:0
BEDROCK_MODEL=anthropic.claude-3-sonnet-20240229-v1:0

# AWS S3 settings
S3_BUCKET_NAME=carma-rag-bucket
S3_REGION=ca-central-1

# AWS Comprehend settings
COMPREHEND_REGION=ca-central-1
COMPREHEND_THRESHOLD=0.9
COMPREHEND_TYPES=["LOCATION", "PERSON"]

# CORS settings
CORS_ORIGINS=["*"]

# Ingestion settings
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
MAX_FILE_SIZE=52428800

# Environment
ENVIRONMENT=development
LOG_LEVEL=DEBUG
DEBUG=True
